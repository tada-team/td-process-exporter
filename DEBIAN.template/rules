#!/usr/bin/make -f

%:
	dh $@ --with=systemd

override_dh_auto_build:
    cd usr/src/process-exporter-%VERSION% && go build -o process-exporter cmd/process-exporter/main.go

override_dh_install:
	mkdir -p debian/process-exporter-%VERSION%/usr/bin
	ls -lah
	cp -v usr/src/process-exporter-%VERSION%/process-exporter debian/process-exporter-%VERSION%/usr/bin/process-exporter
	dh_install

override_dh_systemd_enable:
	dh_systemd_enable --name process-exporter

override_dh_installinit:
	dh_installinit --name process-exporter
