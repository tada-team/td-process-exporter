#!/usr/bin/make -f

%:
	dh $@ --with=systemd

override_dh_auto_build:
	mkdir -p debian/usr/bin
	tree
	ls -lah usr/local/src/td-process-exporter-%VERSION%
	cd usr/local/src/td-process-exporter-%VERSION% && go build -o process-exporter cmd/process-exporter/main.go
	cp -v usr/local/src/process-exporter-%VERSION%/process-exporter debian/usr/bin/process-exporter

override_dh_systemd_enable:
	dh_systemd_enable --name process-exporter

override_dh_installinit:
	dh_installinit --name process-exporter
