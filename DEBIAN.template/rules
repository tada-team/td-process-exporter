#!/usr/bin/make -f
export DH_VERBOSE = 1

%:
	dh $@ --with=systemd --with=golang

build:
	cd usr/src/process-exporter && go build cmd/process-exporter/main.go -o process-exporter
	mv -fv usr/src/process-exporter/process-exporter usr/bin/
	echo "pwd:" && pwd

override_dh_golang:
	echo "noop"

override_dh_systemd_enable:
	dh_systemd_enable --name process-exporter

override_dh_installinit:
	dh_installinit --name process-exporter
