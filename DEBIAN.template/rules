#!/usr/bin/make -f
export DH_VERBOSE = 1

%:
	dh $@ --with=systemd --with=golang

build:
	cd usr/src/process-exporter && go build cmd/process-exporter/main.go
	mv -fv usr/src/process-exporter/main usr/bin/process-exporter

override_dh_golang:
	echo "noop"

override_dh_systemd_enable:
	dh_systemd_enable -p td-process-exporter debian/process-exporter.service

override_dh_systemd_start:
	dh_systemd_start -p td-process-exporter debian/process-exporter.service
