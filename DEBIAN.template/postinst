#!/bin/bash
set -ex

#sudo dpkg -L td-process-exporter
#tree /lib/systemd/
#tree /usr/share/
find / -iname "process-exporter*" -type d

#tree /lib/systemd/system/
#tree /usr/share/doc/td-process-exporter
tree usr/local

cd usr/local/src/process-exporter-%VERSION%
go build -o process-exporter cmd/process-exporter/main.go
mv process-exporter /usr/bin/process-exporter

systemctl restart process-exporter.service
